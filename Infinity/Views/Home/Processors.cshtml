@{
    ViewBag.Title = "Processors";
}

<style>
    body 
    {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        background-image: url('../../Content/images/BGContent.jpg');
        background-attachment: fixed;
        background-size: cover;
    }
</style>

<body>
    <h1 style="text-align: center; color:darkslateblue; font-weight: 700"><b>Processors</b></h1>

    @if (User.IsInRole("Administrator") || User.IsInRole("Customer"))
    {
        string ProcessorList = Session["ProcessorList"].ToString();
        string[] Processors = ProcessorList.Split(new char[] { '\n' }, StringSplitOptions.RemoveEmptyEntries);


        foreach (string Processor in Processors)
        {
            <center>
                <div class="col-lg-12">
                    <h1>@Html.ActionLink(Processor, "ProcessorSearch", "Home", new { processor = Processor }, new { @class = "btn btn-primary", style = "width:100%" })</h1>
                </div>
            </center>
        }
    }

</body>